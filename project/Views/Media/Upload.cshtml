@model project.Models.MediaElement

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            <p>
                Welcome to our Music Service Website
            </p>
        </div>
    </section>
}
@using (Html.BeginForm("UploadFile", "Media", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.IsPublic)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.IsPublic)
        @Html.ValidationMessageFor(model => model.IsPublic)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Genre)
    </div>  
    <div class="editor-field">
        @Html.ListBoxFor(model => model.Genre, Model.Values)
    </div>
    
    <span>
        <input type="file" name="myFile" accept=".mp3" /> <br>
        <input type="submit" value="Upload" />
    </span>
}

<div>
    @Html.ActionLink("Back to My Media", "Index")
</div>
@section Scripts {
    <script src="~/Scripts/media-upload.js"></script>
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
}